<%= javascript_include_tag '_sort_adventures' %>

<div>
  <p> Sort By:</p>
  <input type="radio" class="sort-by" name="sort-by" id="newest" checked="checked">
  <label for="contactChoice1">Newest</label>

  <input type="radio" class="sort-by" name="sort-by" id="most popular">
  <label for="contactChoice2">Most Popular</label>
</div>



<div class="row">
  <div id = "sorted-adventures">
    <%= render 'sorted_adventures', locals: {by: :created_at, order: :desc } %>
  </div>
  <div class="col-md-6 col-md-offset-3">


    <br>
    <%= link_to 'CREATE NEW ADVENTURES', new_user_adventure_path(current_user), class:"btn btn-success btn-lg btn-block active" %>
  </div>
</div>
