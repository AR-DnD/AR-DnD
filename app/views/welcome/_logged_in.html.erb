
<div>
  <%= form_for sort_adventures_path, url: sort_adventures_path, remote: true, id: "sort_form" do |f|%>
    <%= f.radio_button :sortby, 'Newest', :checked => true %>
    <%= label :sortby, 'Newest' %>
    <%= f.radio_button :sortby, 'Most Popular' %>
    <%= label :sortby, 'Most Popular' %>
    <%= f.submit "Submit" %>
  <% end %>
</div>



<div class="row">
  <div id = "sorted-adventures">
    <%= render 'sorted_adventures', locals: {by: :created_at, order: :desc } %>
  </div>
  <div class="col-md-6 col-md-offset-3">


    <br>
    <%= link_to 'CREATE NEW ADVENTURES', new_user_adventure_path(current_user), class:"btn btn-success btn-lg btn-block active" %>
  </div>
</div>
