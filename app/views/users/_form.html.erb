<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="field">
        <font color="white"><%= f.label :username, "New Username" %></font>
        <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
      </div>
      <div class="field">
        <font color="white"><%= f.label :email, "New Email Address" %></font>
        <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
      </div>
      <div class="field">
        <font color="white"><%= f.label :password, "New Password" %></font>
        <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
      </div>
      <div class="form-group">
        <div class="col-md-4 col-md-offset-3">
          <%= f.submit(@user.new_record? ? "Sign Up" : "Update account", class: 'btn btn-success btn-md active') %>
        </div>
        <div class="col-md-2">
          <%=link_to "Cancel/Back", users_path, class: "btn btn-warning btn-md active" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
