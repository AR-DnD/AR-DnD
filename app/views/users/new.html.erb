


<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
    <%= form_for(@user) do |f| %>
      <font color="Orange"><%= f.label :username, "Create a username" %></font>
      <%= f.text_field :username , class:"form-control", placeholder:"Please create your username", autofocus: true%>
      <h2> </h2>
      <font color="Orange"><%= f.label :email, "Provide your email address" %></font>
      <%= f.email_field :email, class:"form-control", placeholder:"Please fill in your email address", autofocus: true %>
      <h2> </h2>
      <font color="Orange"><%= f.label :password, "Create your password" %></font>
      <%= f.password_field :password, class:"form-control", placeholder:"Please create your password", autofocus: true %>
      <h2> </h2>
      <font color="Orange"><%= f.label :password, "Confirm your password" %></font>
      <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Confirmation of your password", autofocus: true%>
      <h2>        </h2>
      <%= f.submit "CREATE ACCOUNT", class: "btn btn-success btn-lg btn-block" %>
    <% end %>
  </div>
</div>
</div>

