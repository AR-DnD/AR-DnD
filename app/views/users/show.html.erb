

<br>
<br>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-3 col-md-offset-2">
      <%= gravatar_for @user, size: 150 %>
      <br>
      <font color="white">
      <p>
        <strong>Username:</strong>
        <%= @user.username %>
      </p>

      <p>
        <strong>Email:</strong>
        <%= @user.email %>
      </p>
    </font>
      <p><%= link_to 'EDIT PROFILE', edit_user_path(@user), class:"btn btn-success btn-lg active" %></p>
      <!-- <p><%= link_to 'Back', users_path, class:"btn btn-warning btn-lg active" %></p> -->
    </div>

    <div class="col-md-6">
      <% if current_user == @user %>
      <font color="white"><td>Your Adventures</td></font>
      <% else %>
      <td> View <%=  %> 's Adventures: </td>
      <% end %>

      <table>
        <tr>
         <th>Adventure Title</th>
         <th>Adventure Story</th>
         <th colspan=3></th>
       </tr>
       <% @user.adventures.each do |adventure|%>
       <tr>
        <td><%= adventure.title %></td>
        <td><%= adventure.story %></td>
        <td><%= link_to 'COPY', copy_path(id: adventure.id, user_id: adventure.user.id), method: :post, class:"btn btn-default btn-sm active"%></td>
        <td><%= link_to 'EDIT INFO/ADD MAPS', edit_user_adventure_path(id: adventure.id, user_id: adventure.user.id), class:"btn btn-info btn-sm active"%></td>
        <td><%= link_to 'DELETE', user_adventure_path(id: adventure.id, user_id: adventure.user.id), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm active" %> </td>
       </tr>
       <% end %>
       </table>
       <p><%= link_to 'NEW ADVENTURE', new_user_adventure_path(current_user), class:"btn btn-success btn-lg btn-block active" %></p>

       <% if current_user == @user %>
       <font color="white"><td>Your Characters</td></font>
       <% else %>
       <td> View <%=  %> 's Characters: </td>
       <% end %>

       <table>
         <tr>
          <th>Character Name</th>
          <th>Character</th>
          <th colspan=3></th>
        </tr>
        <% @user.characters.each do |character|%>
        <tr>
         <td><%= character.name %></td>
         <td><%= character.backstory %></td>
         <td><%= link_to 'EDIT INFO', edit_user_character_path(id: character.id, user_id: character.user_id), class:"btn btn-info btn-sm active"%></td>
         <td><%= link_to 'DELETE', user_character_path(id: character.id, user_id: character.user_id), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm active" %> </td>
        </tr>
        <% end %>
        </table>
        <p><%= link_to 'NEW CHARACTER', new_user_character_path(current_user), class:"btn btn-success btn-lg btn-block active" %></p>
   </div>
 </div>
</div>
