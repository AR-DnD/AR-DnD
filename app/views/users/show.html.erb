<div class="container-fluid">

  <div class="row">
    <div class="col-md-4">
      <div class="box-border2">

        <center><%= gravatar_for @user, size: 150 %></center>

        <div class="row">
          <div class="col-md-12">
            <div class="stat-block3 wide">
              <center>

              <hr class="orange-border" />
                <div class="section-left">
                  <div class="creature-heading">


                      <h7><%= @user.username %></h7>
                      <br>
                      <svg height="5" width="100%" class="tapered-rule">
                        <polyline points="0,0 400,2.5 0,5"></polyline>
                      </svg>
                      <h7><%= @user.email %></h7>
                      <br>


                    </div>
                    <svg height="5" width="100%" class="tapered-rule">
                      <polyline points="0,0 400,2.5 0,5"></polyline>
                    </svg>
                </div>
              </hr>
            </center>

            </div>

        </div>
        <br>
        </div>


        <br>
        <% if current_user == @user %>
          <center>
          <div class="edit-profile">
            <%= link_to 'EDIT PROFILE', edit_user_path(@user) %>
          </div>
          </center>
          <br>
          <ul><center><%= render 'adventures/modal', adventure: @adventure %></center></ul>
          <br>
          <ul><center><%= render 'characters/modal', character: @character, user: current_user %></center></ul>


        <% end %>
      </div>
      <!-- <p><%= link_to 'Back', users_path, class:"btn btn-warning btn-lg active" %></p> -->
    </div>





    <div class="col-md-8">

      <div class="box-border2">
        <div class="row">


        <% if current_user == @user %>
          <div class="font-title"><font color="white"><td>YOUR ADVENTURES</td></font></div>
          <br>
          <% else %>
          <div class="font-title"><font color="white"><td> VIEW <%=  %> 'S ADVENTURES</td></div>
          <% end %>
          <br>



          <% @user.adventures.each do |adventure| %>
            <div class="row">
              <div class="col-md-4">
                <div class="stat-block2 wide">
                  <hr class="orange-border" />
                    <div class="section-left">
                      <div class="creature-heading">


                          <h1><%= adventure.title %></h1>
                          <br>
                          <svg height="5" width="100%" class="tapered-rule">
                            <polyline points="0,0 400,2.5 0,5"></polyline>
                          </svg>
                          <h6><%= adventure.story %></h6>

                        <svg height="5" width="100%" class="tapered-rule">
                          <polyline points="0,0 400,2.5 0,5"></polyline>
                        </svg>
                      </div>

                    </div>
                  </hr>
                  <p>

                    <% if current_user == @user %>

                      <td>
                        <div class="value-button-edit5">
                          <%= link_to 'EDIT INFO/ADD MAPS', edit_user_adventure_path(id: adventure.id, user_id: adventure.user.id) %>
                        </div>
                      </td>
                      <br>
                      <td>
                        <div class="value-button-delete5">
                          <%= link_to 'DELETE', user_adventure_path(id: adventure.id, user_id: adventure.user.id), method: :delete, data: { confirm: 'Are you sure?' } %>
                        </div>
                      </td>
                     <% end %>
                  </p>


            </div>
            <br>
          </div>

          <% end %>
        </div>
         <% if current_user == @user %>
          <div class="font-title"><font color="white"><td>YOUR CHARACTERS</td></font></div>
         <% else %>
          <div class="font-title"><font color="white"><td> VIEW <%=  %> 's CHARACTERS </td></div>
         <% end %>
              <div id = 'character-showings'>
                <%= render 'character_showings'%>
              </div>
              
            </div>
          <br>
        </div>
      </div>

        <!-- <p><%= link_to 'NEW CHARACTER', new_user_character_path(current_user), class:"btn btn-success btn-lg btn-block active" %></p> -->
 </div>
</div>
