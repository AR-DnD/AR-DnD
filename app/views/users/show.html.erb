<h1 align="center">Welcome to <%= @user.username %>'s page</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>
<h4 align="center"><%= @user.username %>'s articles</h4>
<div class="center">
</div>
<%#= render 'articles/article', obj: @user_articles %>
<div class="center">
</div>

<% if current_user == @user %>




  <div id= "new-adventure">
    <%= form_with url: new_adventure_path do |form|%>
      <p>
        <%= form.submit "New Adventure" %>
      </p>
    <% end %>
  </div>
  <p> <%= link_to 'Create New Adventure', new_adventure_path(:user => @user) %> </p>
<% else %>
  <p>
    <strong>Username:</strong>
    <%= @user.username %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>
<% end %>

<% if current_user == @user %>
  <td> Work on your Adventures: </td>
<% else %>
  <td> View <%=  %> 's Adventures: </td>
<% end %>

<table>
  <tr>
   <th>Title</th>
   <th>Story</th>
 </tr>
 <% @user.adventures.each do |adventure|%>
  <tr>
    <% if current_user == @user %>
      <td> <%= link_to adventure.title, edit_adventure_path(adventure) %></td>
    <% else %>
      <td> <%= link_to adventure.title, show_adventure_path(adventure) %></td>
    <% end %>

    <td> <%= adventure.story %></td>

    <% if current_user == @user %>
      <td><%= link_to 'Destroy', adventure, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
    <% end %>
  </tr>
 <% end %>
</table>


<% if @user == current_user %>
  <%= link_to 'Edit', edit_user_path(@user)%> |
  <% end %>
<%= link_to 'Back', users_path %>
