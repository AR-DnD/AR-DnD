<div class="container-fluid">
  <div class="row">
    <div class="col-md-3 col-md-offset-2">
      <%= gravatar_for @user, size: 150 %>
      <br>
      <font color="white">
      <p>
        <strong>Username:</strong>
        <%= @user.username %>
      </p>

      <p>
        <strong>Email:</strong>
        <%= @user.email %>
      </p>
    </font>
      <p><%= link_to 'Edit Profile', edit_user_path(@user), class:"btn btn-success btn-lg active" %></p>
      <!-- <p><%= link_to 'Back', users_path, class:"btn btn-warning btn-lg active" %></p> -->
    </div>

    <div class="col-md-6">
      <% if current_user == @user %>
      <font color="white"><td>Your Adventures</td></font>
      <% else %>
      <td> View <%=  %> 's Adventures: </td>
      <% end %>

      <table>
        <tr>
         <th>Adventure Title</th>
         <th>Adventure Story</th>
         <th colspan=3></th>
       </tr>
       <% @user.adventures.each do |adventure|%>
       <tr>
        <td><%= adventure.title %></td>
        <td><%= adventure.story %></td>
        <td><%= link_to 'Edit/Add Maps', edit_adventure_path(adventure), class:"btn btn-info btn-sma active" %></td>
        <td><%= link_to 'Delete', adventure, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm active" %> </td>
       </tr>
       <% end %>
       </table>
       <p><%= link_to 'New Adventure', new_adventure_path(:user => @user), class:"btn btn-success btn-lg btn-block active" %></p>
   </div>
 </div>
</div>
