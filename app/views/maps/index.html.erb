<p id="notice"><%= notice %></p>

<h1>Maps</h1>

<div class="col-md-5">
  <font color="white"><h1>EDIT/ADD maps to this adventure</h1></font>
  <br>
  <table>
    <thead>
      <tr>
        <th>Map Name</th>
        <th>Map Story</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @maps.each do |map| %>
      <tr>
        <td><%= map.name %></td>
        <td><%= render 'display_map', map: map%></td>
        <td><%= map.story %></td>

        <% if map.adventure.user == current_user%>
          <td><%= link_to 'EDIT', edit_user_adventure_map_path(id: map.id), class:"btn btn-info btn-sm active"%></td>
          <td><%= link_to 'DELETE', user_adventure_map_path(id: map.id), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm active" %> </td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'ADD MAP', new_user_adventure_map_path(current_user), class:"btn btn-success btn-lg btn-block active" %>
</div>
