<%= form_with(model: @map, url: user_adventure_maps_path(), local: true) do |form| %>
  <% if map.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(map.errors.count, "error") %> prohibited this map from being saved:</h2>

      <ul>
      <% map.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <center>
    <div class="field">
      <div class="creature-heading"><h1><%= form.label :name, "MAP NAME" %></h1></div>
      <%= form.text_field :name, class:"form-control", id: :map_name, required: true  %>
    </div>
  </center>

  <center>
    <div class="field hide">
      <font color="white"><%= form.label :data %></font>
      <%= form.text_field :data, class:"form-control", id: :map_data %>
    </div>
  </center>

  <center>
    <div class="field">
      <div class="creature-heading"><h1><%= form.label :story, "MAP STORY" %></h1></div>
      <%= form.text_area :story, id: :map_story, class:"form-control", rows: 8, required: true %>
    </div>
  </center>

  <center>
    <div class="field hide">
      <%= form.label :adventure %>
      <%= form.text_field :adventure_id, :value => params[:adventure_id] %>
    </div>
  </center>

  <td>
    <center>
      <div class="value-button-save-big">
        <div class="actions">
          <%= form.submit "CREATE MAP" %>
        </div>
      </div>
    </center>
  </td>
  <td>
    <center>
      <div class="value-button-back-big">
        <%= link_to 'BACK', user_adventures_path %>
      </div>
    </center>
  </td>


<% end %>
