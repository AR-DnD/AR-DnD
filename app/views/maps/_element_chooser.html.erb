
<div class="col-md-3">
  <div class="dropdown">
    <button class="value-button-edit-2"><div class="creature-heading"><sm>Terrain</sm></div></button>
    <div class="dropdown-content" style="left:0;">
      <label class="btn mapElement" id="obj-Tree">
        <input type="radio" class="mapElement" name="options" value="Tree" id="option1" autocomplete="off" checked> Tree
      </label>
    </div>
  </div>
</div>
<div class="col-md-3">
  <div class="dropdown" display = "block">
    <button class="value-button-edit-2"><div class="creature-heading"><sm>Objects</sm></div></button>
    <div class="dropdown-content" style="left:0;">
      <label class="btn mapElement" id="obj-Orc">
        <input type="radio" class="mapElement" name="options" value="Orc" id="option2" autocomplete="off"> Orc
      </label>
    </div>
  </div>
</div>
<div class="col-md-3">
  <div class="dropdown" display = "block">
    <button class="value-button-edit-2"><div class="creature-heading"><sm>Characters</sm></div></button>
    <div class="dropdown-content" style="left:0;">
      <% @adventure.characters.each do |character| %>
        <label class="btn mapElement" id="char-<%= character.race %>-<%= character.name %>">
          <input type="radio" class="mapElement" name="options" value="Orc" autocomplete="off"> <%= character.name %>
        </label>
      <% end %>
    </div>
  </div>
</div>
<div class="col-md-3">
  <label class="value-button-edit-2" id="rm-Nil">
    <input type="radio" class="mapElement" name="options" value="Remove" id="rm-Nil" autocomplete="off" style="display:none"><div class="creature-heading"><sm>Remove</sm></div>
  </label>
</div>

