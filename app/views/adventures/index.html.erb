<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table>
      <thead>
        <tr>
          <th>Adventure Title</th>
          <th>Adventure Story</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @adventures.each do |adventure| %>
        <tr>
          <td><%= adventure.title %></td>
          <td><%= adventure.story %></td>
          <td><%= link_to 'COPY', copy_path(id: adventure.id), method: :post, class:"btn btn-default btn-sm active"%></td>
          <td><%= link_to 'EDIT INFO/ADD MAPS', edit_user_adventure_path(id: adventure.id), class:"btn btn-info btn-sm active"%></td>
          <td><%= link_to 'DELETE', user_adventure_path(id: adventure.id), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm active" %> </td>
          </tr>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <ul><%= render 'adventures/modal', adventure: @adventure %></ul>

    <!-- <%= link_to 'CREATE NEW ADVENTURES', new_user_adventure_path(current_user), class:"btn btn-success btn-lg btn-block active" %> -->
  </div>
</div>
