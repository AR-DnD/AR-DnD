<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table>
      <thead>
        <tr>
          <th>Adventure Title</th>
          <th>Adventure Story</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @adventures.each do |adventure| %>
        <tr>
          <td><%= adventure.title %></td>
          <td><%= adventure.story %></td>
          <td><%= link_to 'COPY', copy_path(id: adventure.id), method: :post, class:"btn btn-info btn-sm active" %></td>
          <td><%= link_to 'EDIT INFO/ADD Maps', edit_adventure_path(adventure), class:"btn btn-info btn-sm active"%></td>
          <td><%= link_to 'DELETE', adventure, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm active" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <%= link_to 'CREATE NEW ADVENTURES', new_adventure_path, class:"btn btn-success btn-lg btn-block active" %>
  </div>
</div>
