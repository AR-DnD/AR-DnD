<%= form_with(model: @adventure, url: user_adventure_path(current_user), local: true) do |form| %>
  <% if adventure.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(adventure.errors.count, "error") %> prohibited this adventure from being saved:</h2>

      <ul>
      <% adventure.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-3 col-md-offset-2">
        <div class="field">
          <div class="font-title-2"><font color="white"><%= form.label :title, "TITLE" %></font></div>
          <%= form.text_field :title, id: :adventure_title %>
        </div>
        <br>
        <div class="field">
          <div class="font-title-2"><font color="white"><%= form.label :story, "STORY" %></font></div>
          <%= form.text_area :story, id: :adventure_story, rows: 10%>
        </div>

        <div class="field hide">
          <%= form.label :user_id %>
          <%= form.text_field :user_id, id: :adventure_user_id%>
        </div>

        <br>
        <div class="actions">
          <%= form.submit "SAVE CHANGES", class:"btn btn-success btn-lg active" %>
        </div>
      </div>

      <div class="col-md-5">
        <div class="font-title-2"><font color="white"><h1>MAP TABLE</h1></font></div>
        <br>
        <table>
          <thead>
            <tr>
              <th>Map Name</th>
              <th>Map Configuration</th>
              <th>Map Story</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody id = "map-showings">
            <%= render 'map_showings'%>
          </tbody>
        </table>
        <br>
        <% if @adventure.user == current_user%>
          <%= link_to 'ADD MAP', new_user_adventure_map_path(adventure_id: @adventure.id), class:"btn btn-info btn-lg btn-block active" %>
          <%= link_to 'BACK', user_path(@adventure.user.id), class:"btn btn-danger btn-lg btn-block active" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

