<%= form_with(model: adventure, local: true) do |form| %>
  <% if adventure.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(adventure.errors.count, "error") %> prohibited this adventure from being saved:</h2>

      <ul>
      <% adventure.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-3 col-md-offset-2">
        <div class="field">
          <font color="white"><%= form.label :title %></font>
          <%= form.text_field :title, id: :adventure_title %>
        </div>

        <div class="field">
          <font color="white"><%= form.label :story %></font>
          <%= form.text_area :story, id: :adventure_story, rows: 10%>
        </div>

        <div class="field hide">
          <%= form.label :user_id %>
          <%= form.text_field :user_id, id: :adventure_user_id%>
        </div>

        <div class="actions">
          <%= form.submit "SAVE CHANGES", class:"btn btn-success btn-lg active" %>
        </div>
      </div>

      <div class="col-md-5">
        <font color="white"><h1>EDIT/ADD maps to this adventure</h1></font>
        <br>
        <table>
          <thead>
            <tr>
              <th>Map Name</th>
              <th>Map Story</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @adventure.maps.each do |map| %>
            <tr>
              <td><%= map.name %></td>
              <td><%= render 'display_map', map: map%><td>

              <% if @adventure.user == current_user%>
                <td><%= link_to 'EDIT', edit_adventure_map_path(@adventure, map), class:"btn btn-info btn-sm active" %></td>
                <td><%= link_to 'DELETE', adventure_map_path(@adventure, map), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm active" %></td>
              <% else  %>
                <td><%= link_to 'SHOW', map %></td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
        <br>
        <% if @adventure.user == current_user%>
        <%= link_to 'ADD MAP', new_adventure_map_path(@adventure), class:"btn btn-info btn-lg btn-block active" %>
        <br>
        <%= link_to 'BACK', user_path(@adventure.user.id), class:"btn btn-danger btn-lg btn-block active" %>
        <br>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
